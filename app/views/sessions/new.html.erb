<h1>Log In Page</h1>

<div>
    <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
        
        <div class="form">
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>

        
        <div class="form">
            <%= f.label :email %>
            <%= f.email_field :email %>
        </div>
        

        
        <div class="form">
            <%= f.label :password %>
            <%= f.password_field :password %>
        </div>
        
        <div>
            <%= f.submit %>
        </div>

    <% end %>
</div>
