<h1>Sign Up</h1>

<div>
    <%= form_with(model: @user, local: true) do |f| %>
        
        <div class="form">
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>

        
        <div class="form">
            <%= f.label :email %>
            <%= f.email_field :email %>
        </div>
        

        
        <div class="form">
            <%= f.label :password %>
            <%= f.password_field :password %>
        </div>
        
        <div class="form">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %>
        </div>
        
        <div>
            <%= f.submit "sign up" %>
        </div>

    <% end %>
</div>
